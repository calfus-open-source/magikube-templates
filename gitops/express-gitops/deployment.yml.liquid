---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: node-service-deployment
  namespace: {{ project_name }}-{{ environment }}-app
  labels:
    app: node-service
    version: "{% raw %}{{ version }}{% endraw %}"
spec:
  replicas: 1
  selector:
    matchLabels:
      app: node-service
  progressDeadlineSeconds: 150
  template:
    metadata:
      annotations:
        cluster-autoscaler.kubernetes.io/safe-to-evict: "true"
      labels:
        app: node-service
        version: "{% raw %}{{ version }}{% endraw %}"
    spec:
      containers:
        - name: node-service
          image: "{% raw %}{{ image }}{% endraw %}"
        {% if cluster_type == 'k8s' %}
          imagePullSecrets:
            - name: rcred
        {% endif %}
          ports:
            - containerPort: 3001
          resources:
            requests:
              cpu: "500m"
              memory: "512Mi"
 