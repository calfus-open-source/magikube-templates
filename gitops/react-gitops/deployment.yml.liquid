apiVersion: apps/v1
kind: Deployment
metadata:
  name: react-service
  labels:
    app: react-service
spec:
  replicas: 1
  selector:
    matchLabels:
      app: react-service
  template:
    metadata:
      labels:
        app: react-service
    spec:
      containers:
      - name: react-service
        image: {{ .Values.accountId }}.dkr.ecr.{{ aws_region}}.amazonaws.com/{{ project_name }}-{{ frontend_app_type }}-app:{{ latest }}
        ports:
        - containerPort: 80