apiVersion: apps/v1
kind: Deployment
metadata:
  name: nextjs-app
  labels:
    app: nextjs-app
spec:
  replicas: 2
  selector:
    matchLabels:
      app: nextjs-app
  template:
    metadata:
      labels:
        app: nextjs-app
    spec:
      containers:
      - name: nextjs-container
        image: {{ACCOUNT_ID}}.dkr.ecr.{{REGION}}.amazonaws.com/nextjs-app:{{IMAGE_HASH}}
        ports:
        - containerPort: 3000
        env:
        - name: NEXT_PUBLIC_API_URL
          value: "https://api.{{DOMAIN_NAME}}"
        - name: AWS_REGION
          value: "{{REGION}}"
