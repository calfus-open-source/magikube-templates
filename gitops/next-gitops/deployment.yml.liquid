apiVersion: apps/v1
kind: Deployment
metadata:
  name: next-service
  labels:
    app: next-service
spec:
  replicas: 2
  selector:
    matchLabels:
      app: next-service
  template:
    metadata:
      labels:
        app: next-service
    spec:
      containers:
      - name: next-service
        image: {{ .Values.accountId }}.dkr.ecr.{{ .Values.region }}.amazonaws.com/next-service:{{ .Values.imageHash }}
        ports:
        - containerPort: 80