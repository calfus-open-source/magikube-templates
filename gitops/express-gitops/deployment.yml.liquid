apiVersion: apps/v1
kind: Deployment
metadata:
  name: node-service
  labels:
    app: node-service
spec:
  replicas: 2
  selector:
    matchLabels:
      app: node-service
  template:
    metadata:
      labels:
        app: node-service
    spec:
      containers:
      - name: node-service
        image: {{ .Values.accountId }}.dkr.ecr.{{ .Values.region }}.amazonaws.com/node-service:{{ .Values.imageHash }}
        ports:
        - containerPort: 80