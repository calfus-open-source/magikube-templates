apiVersion: apps/v1
kind: Deployment
metadata:
  name: reactjs-app
  labels:
    app: reactjs-app
spec:
  replicas: 2
  selector:
    matchLabels:
      app: reactjs-app
  template:
    metadata:
      labels:
        app: reactjs-app
    spec:
      containers:
      - name: reactjs-container
        image: {{ACCOUNT_ID}}.dkr.ecr.{{REGION}}.amazonaws.com/reactjs-app:{{IMAGE_HASH}}
        ports:
        - containerPort: 3000
        env:
        - name: REACT_APP_API_URL
          value: "https://api.{{DOMAIN_NAME}}"
        - name: AWS_REGION
          value: "{{REGION}}"
