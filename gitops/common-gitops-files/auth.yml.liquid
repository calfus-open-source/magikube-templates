apiVersion: batch/v1
kind: Job
metadata:
  name: auth-service-update
spec:
  template:
    spec:
      containers:
      - name: update-image
        image: your-image-updater-tool
        command: ["sh", "-c", "update-image.sh {{ .Values.accountId }} {{ .Values.region }} auth-service"]
        env:
        - name: GIT_COMMIT_HASH
          valueFrom:
            fieldRef:
              fieldPath: status.commitHash
      restartPolicy: OnFailure