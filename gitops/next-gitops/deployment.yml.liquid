apiVersion: apps/v1
kind: Deployment
metadata:
  name: next-service
  labels:
    app: next-service
spec:
  replicas: 1
  selector:
    matchLabels:
      app: next-service
  template:
    metadata:
      labels:
        app: next-service
    spec:
      containers:
      - name: next-service
        image: {{ .Values.accountId }}.dkr.ecr.{{ aws_region}}.amazonaws.com/{{ project_name }}-{{ frontend_app_type }}-app:{{ latest }}
        ports:
        - containerPort: 80