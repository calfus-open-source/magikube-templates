apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
resources:
  - deployment.yaml
  - ingress.yaml
  - service.yaml

images:
  - name: {{ACCOUNT_ID}}.dkr.ecr.{{REGION}}.amazonaws.com/nextjs-app
    newTag: {{IMAGE_HASH}}

namespace: default

configMapGenerator:
  - name: nextjs-config
    literals:
      - NEXT_PUBLIC_API_URL=https://api.{{DOMAIN_NAME}}
      - AWS_REGION={{REGION}}

secretGenerator:
  - name: tls-secret
    files:
      - tls.crt=path/to/tls.crt
      - tls.key=path/to/tls.key

generatorOptions:
  disableNameSuffixHash: true
