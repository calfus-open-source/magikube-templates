apiVersion: apps/v1
kind: Deployment
metadata:
  name: react-service-deployment
  labels:
    app: react-service
    version: "{% raw %}{{ version }}{% endraw %}"
spec:
  replicas: 1
  selector:
    matchLabels:
      app: react-service
  template:
    metadata:
      annotations:
        cluster-autoscaler.kubernetes.io/safe-to-evict: "true"
      labels:
        app: react-service
        version: "{% raw %}{{ version }}{% endraw %}"
    spec:
      containers:
      - name: react-service
        image: "{% raw %}{{ image }}{% endraw %}"
        {% if cluster_type == 'k8s' -%}
        imagePullSecrets:
          - name: rcred
        {%- endif %}
        ports:
        - containerPort: 3000
        resources:
          requests:
            cpu: "500m"
            memory: "512Mi"
        env:
          - name: REACT_APP_KEYCLOAK_BASE_URL
            value: "https://{{ domain }}/keycloak/realms/magikube"
          - name: REACT_APP_KEYCLOAK_CLIENT_ID
            value: "magikube-client"
          - name: REACT_APP_UI_BASE_URL
            value: "https://{{ domain }}/callback"
