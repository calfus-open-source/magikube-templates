apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: next-service-ingress
  annotations:
    kubernetes.io/ingress.class: alb
    alb.ingress.kubernetes.io/scheme: internet-facing
    alb.ingress.kubernetes.io/certificate-arn: arn:aws:acm:{{ .Values.region }}:{{ .Values.accountId }}:certificate/{{ .Values.certArn }}
spec:
  rules:
    - host: {{ .Values.domainName }}
      http:
        paths:
          - path: /next
            pathType: Prefix
            backend:
              service:
                name: next-service
                port:
                  number: 80