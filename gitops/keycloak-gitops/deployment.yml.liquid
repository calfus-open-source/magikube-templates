---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  annotations:
    alb.ingress.kubernetes.io/group.name: {{ project_name }}-{{ environment }}
    alb.ingress.kubernetes.io/listen-ports: '[{"HTTPS": 443}]'
    alb.ingress.kubernetes.io/target-type: ip
  labels:
    app.kubernetes.io/name: keycloak-service
    app.kubernetes.io/part-of: {{ project_name }}-{{ environment }}-app
  name: keycloak-service-ingress
  namespace: {{ project_name }}-{{ environment }}-app
spec:
  ingressClassName: alb
  rules:
  - host: {{ domain }}
    http:
      paths:
      - backend:
          service:
            name: keycloak-service-svc
            port:
              number: 8080
        path: /keycloak
        pathType: Prefix
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: keycloak-service-deployment
  namespace: {{ project_name }}-{{ environment }}-app
  labels:
    app: keycloak-service
    version: "{% raw %}{{ version }}{% endraw %}"
spec:
  replicas: 1
  selector:
    matchLabels:
      app: keycloak-service
  template:
    metadata:
      annotations:
        cluster-autoscaler.kubernetes.io/safe-to-evict: "true"
      labels:
        app: keycloak-service
        version: "{% raw %}{{ version }}{% endraw %}"
    spec:
      containers:
        - name: keycloak-service
          env:
            - name: KC_HEALTH_ENABLED
              value: "true"
            - name: KC_METRICS_ENABLED
              value: "true"
            - name: KC_HOSTNAME_ADMIN_URL
              value: "https://{{ domain }}/keycloak"
            - name: KC_HOSTNAME_URL
              value: "https://{{ domain }}/keycloak"
            - name: KC_HOSTNAME_STRICT
              value: "false"
            - name: KEYCLOAK_ADMIN
              value: "user"
            - name: KEYCLOAK_ADMIN_PASSWORD
              value: "tGnTUHYmnP"
            - name: PROXY_ADDRESS_FORWARDING
              value: "true"
            - name: KC_HTTP_ENABLED
              value: "true"
            - name: KC_PROXY
              value: "edge"
            - name: QUARKUS_TRANSACTION_MANAGER_ENABLE_RECOVERY
              value: "true"
            - name: KC_PROXY_HEADERS
              value: "xforwarded"
            - name: KC_TRANSACTION_XA_ENABLED
              value: "true"
            - name: KC_DB
              value: postgres
            - name: KC_DB_URL_PORT
              value: "5432"
            - name: KC_DB_URL
              value: jdbc:postgresql://keycloak-postgres/kc-database
            - name: KC_DB_USERNAME
              value: kc-user
            - name: KC_DB_PASSWORD
              value: KcU$e@1!23
          image: "{% raw %}{{ image }}{% endraw %}"
          ports:
            - containerPort: 8080
          resources:
            requests:
              cpu: "500m"
              memory: "512Mi"
 
...