---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: auth-service-deployment
  namespace: {{ projectname }}-{{ environment }}-app
  labels:
    app: auth-service
    version: "{%raw%}{{ version }}{%endraw%}"
spec:
  replicas: 1
  selector:
    matchLabels:
      app: auth-service
  progressDeadlineSeconds: 150
  template:
    metadata:
      labels:
        app: auth-service
        version: "{%raw%}{{ version }}{%endraw%}"
    spec:
      containers:
        - name: auth-service
          env:
            - name: KEYCLOAK_BASE_URL
              value: "http://keycloak-service-svc:8080"
            - name: KEYCLOAK_CLIENT_ID
              value: "admin-cli"
            - name: KEYCLOAK_CLIENT_SECRET
              value: "ea2B9AWBk8kGXvn0yT71n2akPHzz7bPp"
          image: "{%raw%}{{ version }}{%endraw%}"
          ports:
            - containerPort: 3000
          resources:
            requests:
              cpu: "100m"
              memory: "300Mi"
...