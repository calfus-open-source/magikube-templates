
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  annotations:
    alb.ingress.kubernetes.io/group.name: {{ project_name }}-{{ environment }}
    alb.ingress.kubernetes.io/listen-ports: '[{"HTTPS": 443}]'
  labels:
    app.kubernetes.io/name: node-service
    app.kubernetes.io/part-of: {{ project_name }}-{{ environment }}-app
  name: node-service-ingress
  namespace: {{ project_name }}-{{ environment }}-app
spec:
  ingressClassName: alb
  rules:
  - host: {{ domain }}
    http:
      paths:
      - backend:
          service:
            name: node-service-svc
            port:
              number: 3001
        path: /api
        pathType: Prefix
